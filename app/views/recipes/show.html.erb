<div class="page-header">
  <h1><%= @recipe.name %></h1>
</div>

<p class="lead"><%= @recipe.description %></p>

<div class="row">
  
  <div class="col-md-4">
    <h2>Info</h2>
    <dl>
      <dt>Perparation Time:</dt>
      <dd><%= @recipe.preparation_time %> minutes</dd>

      <dt>Servings yielded:</dt>
      <dd><%= @recipe.servings_yielded %></dd>
      
      <dt>Likes</dt>
      <dd><%= @recipe.likes %> <%= link_to '+' , like_recipe_path(@recipe), method: :patch, :class => 'btn btn-default btn-xs' %></dd>
      
      <dt>Permalink</dt>
      <dd><%= link_to @recipe.shortcode, permalink_path(@recipe.shortcode), :class => 'btn btn-default btn-xs' %></dd>
    </dl>
    <p></p>
  </div><!-- end of col -->
  
  <div class="col-md-8">
    <h2>Ingredients</h2>

    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li>
          <strong><%= ingredient.amount %> <%= ingredient.unit %></strong> <%= ingredient.name %>
          
          <%= link_to 'edit', edit_recipe_ingredient_path(@recipe, ingredient), :class => 'btn btn-default btn-xs'%>
          <%= link_to 'remove', recipe_ingredient_path(@recipe, ingredient), method: :delete, :class => 'btn btn-danger btn-xs'%>

        </li>
      <% end %>
    </ul>

    <p><%= link_to '+ Add Ingredient', new_recipe_ingredient_path(@recipe), :class => 'btn btn-default btn-xs' %></p>
  </div><!-- end of col -->

</div><!-- end of row -->

<hr>

<p><%= link_to 'View All Recipes', recipes_path, :class => 'btn btn-primary' %></p>